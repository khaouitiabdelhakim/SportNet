<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#FBFFFE"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:foreground="?attr/selectableItemBackground"
            android:paddingVertical="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profileSection"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="40dp"
                    android:layout_width="45dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/corners_rounded"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/profilePicture"
                        android:src="@drawable/picture_profile"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/main_font"
                        android:id="@+id/username"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="khaouitiabdelhakim12"
                        android:textColor="#171717"
                        android:lineSpacingExtra="3dp"
                        android:textSize="16sp"/>


                    <TextView
                        android:fontFamily="@font/main_font"
                        android:id="@+id/time"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="12 March 2023"
                        android:textColor="#373737"
                        android:lineSpacingExtra="3dp"
                        android:textSize="13sp"/>


                </LinearLayout>

                <ImageView
                    android:visibility="invisible"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/edit"
                    android:padding="9dp"
                    android:layout_margin="15dp"
                    android:src="@drawable/menu_icon"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />

            </LinearLayout>


            <TextView
                android:fontFamily="@font/main_font"
                android:id="@+id/text"
                android:layout_marginHorizontal="10dp"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCornerImageView" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="15dp"
                            android:src="@drawable/view_icon"
                            android:layout_gravity="center"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            />


                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/main_font"
                                android:id="@+id/views"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#2B2B2B"
                                android:lineSpacingExtra="3dp"
                                android:textSize="14sp"/>


                        </LinearLayout>




                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/like"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/likeIcon"
                            android:layout_margin="15dp"
                            android:src="@drawable/heart_icon"
                            android:layout_gravity="center"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            />


                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/main_font"
                                android:id="@+id/likes"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#2B2B2B"
                                android:lineSpacingExtra="3dp"
                                android:textSize="14sp"/>


                        </LinearLayout>




                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/comment"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="15dp"
                            android:src="@drawable/speech_bubble_icon"
                            android:layout_gravity="center"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            />


                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/main_font"
                                android:id="@+id/comments"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#2B2B2B"
                                android:lineSpacingExtra="3dp"
                                android:textSize="14sp"/>


                        </LinearLayout>




                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/share"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="15dp"
                            android:src="@drawable/share_icon"
                            android:layout_gravity="center"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            />


                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/main_font"
                                android:id="@+id/shares"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#2B2B2B"
                                android:lineSpacingExtra="3dp"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>