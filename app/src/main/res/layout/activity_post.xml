<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".editors.PostActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:paddingVertical="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/corners_rounded"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/profile"
                        android:src="@drawable/rounded_profile"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:fontFamily="@font/main_font"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="khaouitiabdelhakim12"
                        android:textColor="#171717"
                        android:lineSpacingExtra="3dp"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="1"
                        android:text="12 March 2023"
                        android:textColor="#373737"
                        android:textSize="13sp" />


                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/text"
                android:fontFamily="@font/main_font"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:maxLines="20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Write what you want to say here"
                android:textColorHint="#8C8C8C"
                android:textColor="#515151"
                android:lineSpacingExtra="3dp"
                android:textSize="15sp"/>


            <FrameLayout
                android:id="@+id/attachmentZone"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="15dp"
                        android:src="@drawable/attachment_icon"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        />


                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/attachmentUrl"
                            android:fontFamily="@font/main_font"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="vide/album/video.mp3"
                            android:textColor="#2B2B2B"
                            android:lineSpacingExtra="3dp"
                            android:textSize="14sp"/>


                    </LinearLayout>




                </LinearLayout>


            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/video"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="15dp"
                            android:src="@drawable/video"
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            />


                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/main_font"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Video"
                                android:textColor="@color/black"
                                android:lineSpacingExtra="3dp"
                                android:textSize="14sp"/>


                            <TextView
                                android:fontFamily="@font/main_font"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="attach a video"
                                android:textColor="@color/black"
                                android:lineSpacingExtra="3dp"
                                android:textSize="12sp"/>


                        </LinearLayout>




                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/picture"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_margin="15dp"
                            android:src="@drawable/picture"
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            />


                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/main_font"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Picture"
                                android:textColor="@color/black"
                                android:lineSpacingExtra="3dp"
                                android:textSize="14sp"/>


                            <TextView
                                android:fontFamily="@font/main_font"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="attach a picture"
                                android:textColor="@color/black"
                                android:lineSpacingExtra="3dp"
                                android:textSize="12sp"/>


                        </LinearLayout>




                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/sharePost"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:backgroundTint="@color/primary"
                android:paddingBottom="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginHorizontal="100dp"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:paddingVertical="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/sharePostText"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            app:tint="@color/white"
                            android:src="@drawable/upload_icon"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            />

                        <TextView
                            android:fontFamily="@font/main_font"
                            android:id="@+id/authenticationType"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Share Post"
                            android:textColor="@color/white"
                            android:lineSpacingExtra="3dp"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <ProgressBar
                        android:clickable="false"
                        android:focusable="false"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/white"
                        android:progress="10"
                        android:id="@+id/sharePostProgress"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </FrameLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>