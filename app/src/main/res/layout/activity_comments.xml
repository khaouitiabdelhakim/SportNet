<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".editors.CommentsActivity">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="120dp"
        android:clipToPadding="false"
        android:orientation="vertical"/>


    <androidx.cardview.widget.CardView
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:paddingVertical="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/corners_rounded"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/profile"
                        android:src="@drawable/rounded_profile"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:fontFamily="@font/main_font"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="username"
                        android:textColor="#171717"
                        android:lineSpacingExtra="3dp"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/date"
                        android:fontFamily="@font/main_font"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="date"
                        android:textColor="#373737"
                        android:lineSpacingExtra="3dp"
                        android:textSize="13sp"/>


                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/comment"
                android:fontFamily="@font/main_font"
                android:gravity="start"
                android:layout_marginHorizontal="10dp"
                android:maxLines="20"
                android:lines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="share your thoughts here"
                android:textColorHint="#8C8C8C"
                android:textColor="#515151"
                android:lineSpacingExtra="3dp"
                android:textSize="15sp"/>




            <androidx.cardview.widget.CardView
                android:id="@+id/sendComment"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:backgroundTint="#004aad"
                android:paddingBottom="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginHorizontal="100dp"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:paddingVertical="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/sendCommentText"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            app:tint="@color/white"
                            android:src="@drawable/upload_icon"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            />

                        <TextView
                            android:fontFamily="@font/main_font"
                            android:id="@+id/authenticationType"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Share Comment"
                            android:textColor="@color/white"
                            android:lineSpacingExtra="3dp"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <ProgressBar
                        android:clickable="false"
                        android:focusable="false"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/white"
                        android:progress="10"
                        android:id="@+id/sendCommentProgress"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </FrameLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            </LinearLayout>





        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:visibility="invisible"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/result"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/no_result"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="#7A7A7A"
            />


        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/message"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Be the first to comment on this post"
            android:textColor="#7A7A7A"
            android:lineSpacingExtra="3dp"
            android:textSize="13sp"/>


    </LinearLayout>

    <ProgressBar
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible"
        android:indeterminateTint="#676767"
        android:progress="10"
        android:id="@+id/loading"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="25dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>