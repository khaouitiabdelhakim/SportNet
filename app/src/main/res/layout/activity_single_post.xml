<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".showers.SinglePostActivity">



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_weight="1"
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:paddingBottom="40dp"
                android:paddingTop="45dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="40dp"
                        android:layout_width="45dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/corners_rounded"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/profilePicture"
                            android:src="@drawable/picture_profile"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/username"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="khaouitiabdelhakim12"
                            android:textColor="#171717"
                            android:lineSpacingExtra="3dp"
                            android:textSize="16sp"/>


                        <TextView
                            android:id="@+id/time"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="12 March 2023"
                            android:textColor="#373737"
                            android:lineSpacingExtra="3dp"
                            android:textSize="13sp"/>


                    </LinearLayout>

                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:scaleType="centerCrop"
                    />


                <TextView
                    android:layout_marginBottom="20dp"
                    android:id="@+id/text"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lionel Messi, parfois surnommé Leo Messi, né le 24 juin 1987 à Rosario en Argentine, est un footballeur international argentin jouant au poste d'attaquant à l’Inter Miami CF en MLS. Octuple vainqueur du Ballon d'or, un record, il est considéré comme l'un des meilleurs joueurs de football toutes générations confondues."
                    android:textColor="#515151"
                    android:lineSpacingExtra="3dp"
                    android:textSize="15sp"/>





                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="15dp"
                                android:src="@drawable/view_icon"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                />


                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/views"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="12.5 K"
                                    android:textColor="#2B2B2B"
                                    android:lineSpacingExtra="3dp"
                                    android:textSize="14sp"/>


                            </LinearLayout>




                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/like"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/likeIcon"
                                android:layout_margin="15dp"
                                android:src="@drawable/heart_icon"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                />


                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/likes"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="12.5 K"
                                    android:textColor="#2B2B2B"
                                    android:lineSpacingExtra="3dp"
                                    android:textSize="14sp"/>


                            </LinearLayout>




                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/comment"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="15dp"
                                android:src="@drawable/speech_bubble_icon"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                />


                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/comments"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="12.5 K"
                                    android:textColor="#2B2B2B"
                                    android:lineSpacingExtra="3dp"
                                    android:textSize="14sp"/>


                            </LinearLayout>




                        </LinearLayout>


                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/share"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_margin="15dp"
                                android:src="@drawable/share_icon"
                                android:layout_gravity="center"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                />


                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/shares"
                                    android:maxLines="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="12.5 K"
                                    android:textColor="#2B2B2B"
                                    android:lineSpacingExtra="3dp"
                                    android:textSize="14sp"/>


                            </LinearLayout>




                        </LinearLayout>


                    </FrameLayout>




                </LinearLayout>





            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible"
        android:indeterminateTint="#595959"
        android:progress="10"
        android:id="@+id/loadingProgress"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="25dp"/>




</androidx.coordinatorlayout.widget.CoordinatorLayout>