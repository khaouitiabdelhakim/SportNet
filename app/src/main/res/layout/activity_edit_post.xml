<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".editors.EditPostActivity">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="80dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:paddingVertical="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_width="45dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/corners_rounded"
                    android:layout_height="45dp">

                    <ImageView
                        android:id="@+id/profile"
                        android:src="@drawable/rounded_profile"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/username"
                        android:fontFamily="@font/main_font"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="khaouitiabdelhakim12"
                        android:textColor="#171717"
                        android:lineSpacingExtra="3dp"
                        android:textSize="16sp"/>


                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:lineSpacingExtra="3dp"
                        android:maxLines="1"
                        android:text="12 March 2023"
                        android:textColor="#373737"
                        android:textSize="13sp" />


                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/text"
                android:fontFamily="@font/main_font"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:maxLines="20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="Update the post caption"
                android:textColorHint="#8C8C8C"
                android:textColor="#515151"
                android:lineSpacingExtra="3dp"
                android:textSize="15sp"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/updateProfile"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:elevation="10dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:backgroundTint="@color/primary"
                android:paddingBottom="10dp"
                app:cardCornerRadius="5dp"
                android:layout_marginHorizontal="100dp"
                android:layout_height="wrap_content">


                <FrameLayout
                    android:paddingVertical="1dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/updateProfileText"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_marginHorizontal="10dp"
                            app:tint="@color/white"
                            android:src="@drawable/edit_icon"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            />

                        <TextView
                            android:fontFamily="@font/main_font"
                            android:id="@+id/authenticationType"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Update Post"
                            android:textColor="@color/white"
                            android:lineSpacingExtra="3dp"
                            android:textSize="15sp"/>

                    </LinearLayout>

                    <ProgressBar
                        android:clickable="false"
                        android:focusable="false"
                        android:visibility="invisible"
                        android:indeterminateTint="@color/white"
                        android:progress="10"
                        android:id="@+id/updateProfileProgress"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </FrameLayout>


            </androidx.cardview.widget.CardView>






        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>