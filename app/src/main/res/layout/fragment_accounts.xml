<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragments.AccountsFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/myAccount"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="40dp"
                android:layout_width="40dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/corners_rounded"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/profilePicture"
                    android:src="@drawable/rounded_profile"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/main_font"
                    android:id="@+id/username"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="username"
                    android:textColor="#171717"
                    android:lineSpacingExtra="3dp"
                    android:textSize="14sp"/>


                <TextView
                    android:fontFamily="@font/main_font"
                    android:id="@+id/time"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="My account"
                    android:textColor="#373737"
                    android:lineSpacingExtra="3dp"
                    android:textSize="12sp"/>


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#c5d6ec"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


            <LinearLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_background_all_corners"
                android:orientation="horizontal"
                android:paddingVertical="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:inputType="text"
                    app:iconifiedByDefault="false"
                    app:queryHint="look for an account" />

            </LinearLayout>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:clipToPadding="false"
            android:layout_marginTop="10dp"
            android:paddingBottom="150dp"
            android:paddingTop="15dp"
            android:id="@+id/accountsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </LinearLayout>

    <ProgressBar
        android:clickable="false"
        android:focusable="false"
        android:visibility="invisible"
        android:indeterminateTint="#676767"
        android:progress="10"
        android:id="@+id/loadingProgress"
        android:layout_gravity="center"
        android:layout_width="25dp"
        android:layout_height="25dp"/>


    <LinearLayout
        android:visibility="invisible"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/result"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#c5d6ec">

        <ImageView
            android:src="@drawable/no_result"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="#7A7A7A"
            />


        <TextView
            android:fontFamily="@font/main_font"
            android:id="@+id/message"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="No account found with this name"
            android:textColor="#7A7A7A"
            android:lineSpacingExtra="3dp"
            android:textSize="13sp"/>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>